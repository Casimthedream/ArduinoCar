    public partial class Form1 : Form
    {
        class Problem
        {
            //private variables
            private int correctIndex;
            private string Question;
            private string[] arr = new string[4];

            //accesor
            public int getCorrectIndex() { return correctIndex; }
            //mutator
            public void setQuestion(string Q) { Question = Q; }
            public void setAnswers(string[] A) { arr = A; }
            public void setIndex(int i) { correctIndex = i; }
            //constructor
            public Problem(string Q, string[] A, int a_ind)
            {
                Question = Q;
                A = arr;
                correctIndex = a_ind;
            }
            //== operator overload
            public static bool operator ==(Problem obj, int x)
            {
                if (obj.correctIndex == x)
                    return true;
                else
                    return false;
            }
            //!= operator overload
            public static bool operator !=(Problem obj, int x)
            {
                if (obj.correctIndex != x)
                    return true;
                else
                    return false;
            }

        }
        public Form1()
        {
            InitializeComponent();
        }

